{
  "name": "@ldesign/cli",
  "version": "1.0.0",
  "description": "LDesign CLI 工具 - 提供脚手架、UI 管理界面等功能",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ldesign": "./bin/cli.js",
    "ld": "./bin/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "node scripts/dev-universal.js",
    "dev:legacy": "concurrently --kill-others --kill-others-on-fail --raw -n web,server -c bgBlue.bold,bgMagenta.bold \"pnpm:dev:web\" \"pnpm:dev:server\"",
    "dev:web": "cd src/web && pnpm dev",
    "dev:server": "tsx watch --clear-screen=false src/server/dev.ts",
    "build": "pnpm run clean && pnpm run build:web && pnpm run build:cli && pnpm run copy:web",
    "build:cli": "tsup",
    "build:web": "cd src/web && pnpm build",
    "copy:web": "node scripts/copy-web.js",
    "clean": "rimraf dist && cd src/web && rimraf dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "install:web": "cd src/web && pnpm install",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "keywords": [
    "ldesign",
    "cli",
    "scaffold",
    "ui",
    "vue",
    "typescript"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "cac": "^6.7.14",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "open": "^10.0.3",
    "portfinder": "^1.0.32",
    "verdaccio": "^6.2.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "concurrently": "^9.2.1",
    "eslint": "^8.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  }
}
