<script setup lang="ts">
import { ref, reactive, onMounted } from 'vue'
import { useRouter } from 'vue-router'
import { useApi } from '../composables/useApi'

// è·¯ç”±
const router = useRouter()

// API å®ä¾‹
const api = useApi()

// å“åº”å¼æ•°æ®
const loading = ref(false)
const importing = ref(false)
const projects = ref<any[]>([])
const showImportDialog = ref(false)
const successMessage = ref('')
const error = ref('')

// å¯¼å…¥è¡¨å•
const importForm = reactive({
  path: '',
  name: '',
  description: ''
})

// ç›®å½•é€‰æ‹©å¼•ç”¨
const directoryInput = ref<HTMLInputElement>()

// æ ¼å¼åŒ–æ—¥æœŸ
const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('zh-CN')
}

// è·å–é¡¹ç›®åˆ—è¡¨
const getProjects = async () => {
  loading.value = true
  error.value = ''
  
  try {
    const response = await api.get('/api/projects')
    if (response.success) {
      projects.value = response.data
    } else {
      error.value = response.message || 'è·å–é¡¹ç›®åˆ—è¡¨å¤±è´¥'
    }
  } catch (err) {
    error.value = err instanceof Error ? err.message : 'è·å–é¡¹ç›®åˆ—è¡¨å¤±è´¥'
  } finally {
    loading.value = false
  }
}

// åˆ·æ–°é¡¹ç›®åˆ—è¡¨
const refreshProjects = () => {
  getProjects()
}

// é€‰æ‹©ç›®å½•
const selectDirectory = () => {
  directoryInput.value?.click()
}

// å¤„ç†ç›®å½•é€‰æ‹©
const handleDirectorySelect = (event: Event) => {
  const target = event.target as HTMLInputElement
  const files = target.files
  
  if (files && files.length > 0) {
    // è·å–ç¬¬ä¸€ä¸ªæ–‡ä»¶çš„è·¯å¾„ï¼Œå»æ‰æ–‡ä»¶åå¾—åˆ°ç›®å½•è·¯å¾„
    const firstFile = files[0]
    const fullPath = firstFile.webkitRelativePath
    const pathParts = fullPath.split('/')
    pathParts.pop() // ç§»é™¤æ–‡ä»¶å
    const directoryPath = pathParts.join('/')
    
    // åœ¨Windowsç¯å¢ƒä¸‹ï¼Œéœ€è¦è½¬æ¢è·¯å¾„æ ¼å¼
    if (navigator.platform.includes('Win')) {
      importForm.path = directoryPath.replace(/\//g, '\\')
    } else {
      importForm.path = directoryPath
    }
  }
}

// å¯¼å…¥é¡¹ç›®
const importProject = async () => {
  if (!importForm.path) return
  
  importing.value = true
  error.value = ''
  
  try {
    const response = await api.post('/api/projects', {
      path: importForm.path,
      name: importForm.name,
      description: importForm.description
    })
    
    if (response.success) {
      successMessage.value = 'é¡¹ç›®å¯¼å…¥æˆåŠŸ'
      closeImportDialog()
      await getProjects() // åˆ·æ–°é¡¹ç›®åˆ—è¡¨
    } else {
      error.value = response.message || 'å¯¼å…¥é¡¹ç›®å¤±è´¥'
    }
  } catch (err) {
    error.value = err instanceof Error ? err.message : 'å¯¼å…¥é¡¹ç›®å¤±è´¥'
  } finally {
    importing.value = false
  }
}

// åˆ é™¤é¡¹ç›®
const deleteProject = async (projectId: string) => {
  if (!confirm('ç¡®å®šè¦åˆ é™¤è¿™ä¸ªé¡¹ç›®å—ï¼Ÿ')) return
  
  try {
    const response = await api.delete(`/api/projects/${projectId}`)
    if (response.success) {
      successMessage.value = 'é¡¹ç›®åˆ é™¤æˆåŠŸ'
      await getProjects() // åˆ·æ–°é¡¹ç›®åˆ—è¡¨
    } else {
      error.value = response.message || 'åˆ é™¤é¡¹ç›®å¤±è´¥'
    }
  } catch (err) {
    error.value = err instanceof Error ? err.message : 'åˆ é™¤é¡¹ç›®å¤±è´¥'
  }
}

// è·³è½¬åˆ°é¡¹ç›®è¯¦æƒ…
const goToProject = (projectId: string) => {
  router.push(`/projects/${projectId}`)
}

// å…³é—­å¯¼å…¥å¯¹è¯æ¡†
const closeImportDialog = () => {
  showImportDialog.value = false
  importForm.path = ''
  importForm.name = ''
  importForm.description = ''
}

// ç»„ä»¶æŒ‚è½½æ—¶åŠ è½½æ•°æ®
onMounted(() => {
  getProjects()
})
</script>

