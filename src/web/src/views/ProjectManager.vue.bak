    <!-- é¡¹ç›®åˆ—è¡¨ -->
    <div class="projects-container">
      <div v-if="loading" class="loading-state">
        <span class="icon">â³</span>
        <p>æ­£åœ¨åŠ è½½é¡¹ç›®åˆ—è¡¨...</p>
      </div>

      <div v-else-if="projects.length === 0" class="empty-state">
